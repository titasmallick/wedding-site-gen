rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Wishes collection - anyone can read and write
    match /wishes/{wishId} {
      allow read, write: if true;
    }
    
    // Song requests collection - anyone can read and write
    match /song_requests/{requestId} {
      allow read, write: if true;
    }
    
    // Guestbook collection - anyone can read and write
    match /guestbook/{entryId} {
      allow read, write: if true;
    }

    // Face Data collection - anyone can read and write (for guestbook search)
    match /facedata/{docId} {
      allow read, write: if true;
    }

    // Registry Items - anyone can read, only admin can write (via Admin SDK)
    match /registry_items/{itemId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Registry Contributions - anyone can read, only admin can write (via Admin SDK)
    match /registry_contributions/{contribId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // RSVPs collection - anyone can read and write
    match /rsvps/{rsvpId} {
      allow read, write: if true;
    }
    
    // Email reminders collection - public read, authenticated write only
    match /email-reminders/{reminderId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // All other documents - read public, write authenticated only
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}